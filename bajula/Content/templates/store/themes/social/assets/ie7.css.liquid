ul#blogs li, #tweets ul li, #cart-nav li { list-style-position: outside;}
#blogs, #tweets { padding-top:0;}
h3.pb0 { margin:0 !important; padding: 0 !important; }
.sub-nav { margin-top:18px; margin-left:-50px;}
.featured-list .product-price, .featured-list .red { display:block; clear:both;}
#frontpage { clear:both; padding:30px 0 60px;}
hr { border-width:1px 0 0 0; border-style:solid; border-color: {{ settings.border_color }}; color: {{ settings.bg_color }};}
.counter-box { background:none; border:none;}
.hr_underline { margin: 0 0 7px;}
.arrow-left, .salemarker { height:0; width:0;}
#cycle-buttons { margin-left:-370px; background-color:{{ settings.product_image_bg_color }};}
#product-left .clearfix { clear:both; padding:20px;}
#cycle-buttons p { margin-top:-17px;}
#nav > ul > li { padding-bottom:4px; }
#tab-buttons > li { padding-bottom:15px;}
#tabs-cart, #tabs-activity { margin-left:-340px;}
#cycle img { margin-top:0px;}
.gallery-image-wrapper { width: 250px; height: 250px; line-height: 250px;}
.gallery-image-wrapper img { max-height: 250px; max-width: 250px; vertical-align: middle; margin-top: -2px;}
.cart-btn, .cart-quantity { display:inline; line-height:16px; height:16px; vertical-align:middle;}
#cart-nav li { margin-left:-20px; padding-left:20px;}
.cart-list-image img { margin-left:15px;}
.cart-list-description { margin: 0 0 0 25px;}
#cart-nav { padding-bottom:50px; }
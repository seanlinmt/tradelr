<div id="index-left">
	<div id="excerpt">
	  {% assign article = pages.frontpage %}
    {% if article.content != "" %}
  		<h3>{{ pages.frontpage.title }}</h3>
  		{{ pages.frontpage.content }}
  	{% else %}
  	  In <em>Admin &gt; Blogs &amp; Pages</em>, create a page with the handle <strong><code>frontpage</code></strong> and it will show up here.<br />
  	  {{ "Learn more about handles" | link_to "http://wiki.Tradelr.com/Handle" }}
  	{% endif %}
  	

		<h3>{{ pages.about-us.title }}</h3>
		{{ pages.about-us.content }}
		
	</div>
	<div id="featured">
		<h3>{{ collections.frontpage.title }}</h3>
		<ul>
            {% for product in collections.frontpage.products limit: 5 %}
			    <li><a href="{{ product.url | within: collections.all }}">{{ product.title }} for <span class="price">{{ product.price | money }}</span></a></li>
            {% endfor %}
		</ul>
		<p><a href="/collections/all">Browse all Products</a></p>
	</div>
</div>
<div id="index-right">{% for product in collections.frontpage.products limit: 1 %}
	<h5>{{ product.title }}</h5>{% for image in product.images limit: 1 %}
	<a href="{{ product.url | within: collections.all }}" title=""><img src="{{ image | product_img_url: 'grande' }}" alt="{{ product.title | escape }}" /></a>{% endfor %}{% endfor %}
</div>
<div class="col-content" id="page-{{page.handle}}">

	<div class="page-header clearfix">
	  <h1 class="title">{{ page.title }}</h1>
	</div>
	
	<div class="content">
		{{ page.content }}
		
		{% form 'contact' %}
		
			{% if form.posted_successfully? %}
			  <p class="success-msg">Thanks for contacting us! We'll get back to you as soon as possible.</p>
			{% endif %}

			{% if form.errors %}
			<p class="error-msg">
				<ul class="error-list">
			  {% for field in form.errors %}
			    <li>{{ field }} - {{ form.errors.messages[field] }}</li>
			  {% endfor %}
				</ul>
			</p>
			{% endif %}	
			
			<ul id="contact-form">
				<li class="clearfix type-text">
					<label for="name">Name</label>
					<input type="text" id="name" name="name" />
				</li>	
				<li class="clearfix type-text">
					<label for="email">Email</label>
					<input type="email" id="email" class="email" name="email" />
				</li>		
				<li class="clearfix type-textarea">
					<label for="message">Message</label>
					<textarea id="message" name="body"></textarea>
				</li>
				<li class="clearfix type-submit">
					<input type="submit" class="submit btn" value="Send" />
				</li>
			</ul>
		{% endform %}
			
	</div>
	
</div><!-- /.col-content -->

<div class="col-browse">
	{% include 'left-col-nav' %}
	{% include 'left-col-social' %}
	{% include 'left-col-ads' %}
</div><!-- /#col-browse -->